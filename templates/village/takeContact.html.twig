{% extends "base.html.twig" %}

{% block body %}
	<h1>Prendre contact</h1>
	{% form_theme formContact 'bootstrap_4_layout.html.twig' %}

	{{ form_start(formContact) }}

	<input class="form-check-input" type="" name="flexRadioDefault" id="flexRadioDefault1">
	<label class="form-check-label" for="flexRadioDefault1">
		{{ form_row(formContact.civilite) }}
	</label>

	{{ form_row(formContact.nom) }}
	{{ form_row(formContact.prenom) }}
	{{ form_row(formContact.telephone) }}
	{{ form_row(formContact.eMail) }}
	{{ form_row(formContact.content) }}
	{{ form_row(formContact.motif) }}
	{# {{ form_widget(formContact) }} #}

	<br>
	<button type="submit" class="btn btn-primary">
		Envoyer
	</button>
	{{ form_end(formContact) }}
{% endblock %}
