<!DOCTYPE html>
<html style="background-color: #b0e0ec;">

<head>
	<meta charset="UTF-8">

	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">


	<title>
		{% block title %}Saizerais
		{% endblock %}
	</title>

	{# Run `composer require symfony/webpack-encore-bundle`
	and uncomment the following Encore helpers to start using Symfony UX #}
	{% block stylesheets %}
	{# {{ encore_entry_link_tags('app') }} #}
	{#
	<link rel="stylesheet" href="{{ asset('css/style.css') }}" type="text/css" media="screen" /> #}
	{#
	<link href="{{ asset('public/css/main.css') }}" rel="stylesheet" /> #}
	{% endblock %}



</head>

<header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom fixed-top"
	style="color: var(--bs-red);background: linear-gradient(#f76b06, var(--bs-yellow)), var(--bs-yellow);">
	<img style="margin-left:10px ;transform: perspective(940px) translate(-4px);height: 70px;width: 56.578px;"
		src="/images/blason-saizerais-removebg-preview.png">
	<a href="{{ path('home') }}"
		class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
		<svg class="bi me-2" width="20" height="32">
			<use xlink:href="#bootstrap"></use>
		</svg>
		<span class="fs-4">Saizerais</span>
	</a>

	<ul class="nav nav-pills">
		<li class="nav-item">
			<a href="{{ path('home') }}"
				class="nav-link {% if app.request.attributes.get('_route') == 'home' %}active{% endif %}"
				aria-current="page">Accueil</a>
		</li>
		<li class="nav-item">
			<a href="{{ path('history') }}"
				class="nav-link {% if app.request.attributes.get('_route') == 'history' %}active{% endif %}">Histoire</a>
		</li>
		<li class="nav-item">
			<a href="{{ path('contact_create') }}"
				class="nav-link {% if app.request.attributes.get('_route') == 'contact_create' %}active{% endif %}">Contact</a>
		</li>

		{% if app.user %}
		<li class="nav-item dropdown">
			<a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button"
				data-bs-toggle="dropdown" aria-expanded="false">
				Administration
			</a>
			<ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
				<li>
					<a href="{{ path('events') }}"
						class="dropdown-item {% if app.request.attributes.get('_route') == 'events' %}active{% endif %}">Evènement</a>
				</li>
				<li>
					<a href="{{ path('actualitys') }}"
						class="dropdown-item {% if app.request.attributes.get('_route') == 'actualitys' %}active{% endif %}">Actualité</a>
				</li>
				<li>
					<a href="{{ path('actuality_create') }}"
						class="dropdown-item {% if app.request.attributes.get('_route') == 'actuality_create' %}active{% endif %}">Création
						d'actualité</a>
				</li>
				<li>
					<a href="{{ path('event_create') }}"
						class="dropdown-item {% if app.request.attributes.get('_route') == 'event_create' %}active{% endif %}">Création
						d'évènement</a>
				</li>
				<li>
					<a href="{{ path('contact') }}"
						class="dropdown-item {% if app.request.attributes.get('_route') == 'contact' %}active{% endif %}">Messages</a>
				</li>
			</ul>
		</li>
		{% endif %}

		{% if not app.user %}
		<li class="nav-item">
			<a href="{{ path('app_login') }}"
				class="nav-link {% if app.request.attributes.get('_route') == 'app_login' %}active{% endif %}">Connexion</a>
		</li>
		{% else %}
		<li class="nav-item">
			<a href="{{ path('app_logout') }}"
				class="nav-link {% if app.request.attributes.get('_route') == 'app_logout' %}active{% endif %}">Déconnexion</a>
		</li>
		{% endif %}

	</ul>
</header>

<body style="background-color: #b0e0ec; margin-top: 150px;">
	<div class="container"> 
		{% block body %}
		{% endblock %}
	</div>
	{% block javascripts %}
	{# {{ encore_entry_script_tags('app') }} #}

	<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
		integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
		crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
		integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
		crossorigin="anonymous"></script>
	{% endblock %}
</body>

</html>